 
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String 
  firstName String
  lastName String 
  dateOfBirth DateTime
  address String 
  city String 
  country String 
  postalCode String
  phoneNumber String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages Message[]
  otp Otp[]
}

model Admin {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String 
  firstName String
  lastName String 
  dateOfBirth DateTime
  address String 
  city String 
  country String 
  postalCode String
  phoneNumber String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  messages Message[]
}

model Message {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String 
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
  title String
  body String
  latitude Float    @default(00.000)
  longitude Float @default(00.000)
  address String   
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Otp {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String 
  otp Int
  email String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}